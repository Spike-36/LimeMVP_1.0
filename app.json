{
  "expo": {
    "name": "LimeMVP_1.0",
    "slug": "limemvp-1-0",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "limemvp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.petermilligan.limemvp",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app does not access your photos. This permission is requested by a third-party library and is not used.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to help users practice pronunciation."
      }
    },
    "android": {
      "package": "com.petermilligan.limemvp",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ]
  }
}
